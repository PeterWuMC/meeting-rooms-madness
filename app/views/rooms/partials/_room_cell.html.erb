<% room, room_is_free = find_room(name) %>

<td class='<%= call_td(room_is_free) %>'>
  <%= room.name.to_s.humanize %><br>
  <% unless room_is_free %>
    <%= current_event_summary(room) %><br>
    until <%= current_event_end_time(room) %>
  <% else %>
    Book room for the next:
    <%= link_to '30 minutes', room_events_path(room.name, duration: 30.minutes, from_time: Time.current), :method=> :post %>
    |
    <%= link_to '1 hour', room_events_path(room.name, duration: 1.hour, from_time: Time.current), :method=> :post %>
  <% end %>
</td>

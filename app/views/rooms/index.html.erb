  <tr>
    <td class='tall', colspan=2>
    Find me a room:<br>
    <%= form_tag(find_rooms_path, method: :post) do -%>
    <%= select_tag "date", options_for_select(find_room_dates_array(5)) %>
    <%= select_tag "duration", options_for_select(find_room_duration_array) %>
    <%= label_tag do %>
      <%= check_box_tag :projector %>
      projector?
    <% end %>
    <%= submit_tag 'find' %>
  <% end -%>

    </td>
    <%= render partial: 'rooms/partials/room_cell', locals: {name: :elbistan} %>
  </tr>

  <tr>
    <td class='tall', colspan=2>
    Rooms are layed out in the same way the look in the floorplan.
    </td>
    <%= render partial: 'rooms/partials/room_cell', locals: {name: :grimsby} %>
  </tr>
  <tr>
    <td colspan=2></td>
    <%= render partial: 'rooms/partials/room_cell', locals: {name: :test_room} %>
  </tr>

<table>
  <tr>
    <%= render partial: 'rooms/partials/room_cell', locals: {name: :customer_experience_1} %>

    <%= render partial: 'rooms/partials/room_cell', locals: {name: :customer_experience_2} %>

    <td>
        <h3 align="center">Meetopia</h><br>
        The Meeting Room Tool.
        </td>
  </tr>

  <tr>
    <td class='tall', colspan=2></td>
    <%= render partial: 'rooms/partials/room_cell', locals: {name: :kingston} %>
